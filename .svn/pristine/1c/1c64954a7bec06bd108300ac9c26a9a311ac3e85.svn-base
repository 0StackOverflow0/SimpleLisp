// REPL.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include "GetSymbols.h"
#include <memory>

#define GetSymString(unit) ((REPL::SymbolUnit*)unit)->GetRetVal()->GetStrValue()

int _tmain(int argc, _TCHAR* argv[])
{
	std::string initial;
	REPL::BaseUnit* result;

	REPL::RegisterSpecialUnits();

	while(1)
	{
		getline(std::cin, initial);

		if (initial == "quit")
			return 1;

		if (initial == "")
			continue;

		result = REPL::deduce(initial);

		REPL::BaseUnit* Answer = REPL::Reduce(*result);

		if ((Answer)->GetUnitType() == REPL::SymUnit)
			std::cout << GetSymString(Answer) << std::endl;
		else if (Answer->GetUnitType() == REPL::FunUnit)
			std::cout << Answer->GetName() << std::endl;
		else
			std::cout << Answer->GetStructString() << std::endl;
	}

	return 0;
}
